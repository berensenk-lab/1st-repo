{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 3am on Monday"],
  "dockerfile": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "prConcurrentLimit": 5,
  "prCreation": "immediate",
  "labels": ["dependencies", "renovate"],
  "packageRules": [
    {
      "matchCategories": ["docker"],
      "enabled": true
    }
  ]
}
